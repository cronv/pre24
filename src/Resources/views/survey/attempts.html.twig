{% extends 'survey/index.html.twig' %}

{% set title = 'Данные опроса' %}

{% block content %}
    <div class="container">
        <div class="container mt-3">
            <!-- Кнопка "Пройти опрос" -->
            <div id="goToSurvey" class="text-center mb-3">
                <p class="fs-4">{{ attempts.assignment.survey.getName }}</p>
                <a class="btn btn-primary" href="{{ path('ctb-survey-processed', {'uuid': attempts.assignment.survey.getUuid}) }}">Пройти опрос</a>
            </div>

            <!-- Список с подчеркиваниями -->
            <hr>
            <span class="fw-bold">Статистика</span>
            <div id="scoreList">
                <div class="d-flex justify-content-between fw-bold">
                    <div>№</div>
                    <div>Балл</div>
                </div>
                <div class="d-flex justify-content-between">
                    <div>1</div>
                    <div>85</div>
                </div>
                <div class="d-flex justify-content-between">
                    <div>2</div>
                    <div>72</div>
                </div>
            </div>
        </div>
    </div>
    {% block table %}
    {% endblock %}
{% endblock %}
