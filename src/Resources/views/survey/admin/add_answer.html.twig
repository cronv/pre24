{% set idModal = idModal|default('addModal') %}
{% set modalTitle = modalTitle|default('Добавить ответ') %}
{% set action = action|default(path('ctb-survey-admin-a-add')) %}
{% set method = method|default('POST') %}

{% block modal %}
    <!-- Modal -->
    <div class="modal fade" id="{{ idModal }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addForm" action="{{ action }}" method="{{ method }}">
                    <!-- Форма для добавления задачи -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">{{ modalTitle }}</h5>
                        <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {% for k, value in hiddenInputs %}
                            <input type="hidden" name="{{ k }}" value="{{ value }}">
                        {% endfor %}
                        <div class="mb-3">
                            <label for="answerName" class="form-label">Ответ</label>
                            <input type="text" class="form-control" id="answerName" name="name" autocomplete="off"
                                   maxlength="255" required>
                        </div>
                        <div class="mb-3">
                            <label for="isCorrect" class="form-label">Правильный</label>
                            <select class="form-select" id="isCorrect" name="is_correct" required>
                                {% for k, correct in listCorrects %}
                                    <option value="{{ k }}">{{ correct }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отменить</button>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
